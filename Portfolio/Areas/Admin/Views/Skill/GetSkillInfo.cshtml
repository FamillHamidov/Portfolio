@model EntityLayer.Entities.Skill
@{
    ViewData["Title"] = "GetSkillInfo";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form asp-action="UpdateSkill" method="post">
	<input asp-for="Id" type="hidden" />
	<div class="form-group">
		<label asp-for="SkillName" class="col-md-2 control-label"></label>
		<div class="col-md-10">
			<input asp-for="SkillName" class="form-control" />
		</div>
	</div>
	<div class="form-group">
		<label asp-for="Value" class="col-md-2 control-label"></label>
		<div class="col-md-10">
			<input asp-for="Value" class="form-control" />
		</div>
	</div>
	<div class="form-group">
		<button class="btn btn-primary">Update</button>
	</div>
</form>



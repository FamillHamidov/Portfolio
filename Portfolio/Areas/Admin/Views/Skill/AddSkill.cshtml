@model EntityLayer.Entities.Skill
@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form asp-action="AddSkill" method="post">
	<div class="form-group">
		<label asp-for="SkillName" class="col-md-2 control-label"></label>
		<div class="col-md-10">
			<input asp-for="SkillName" class="form-control" />
			<span asp-validation-for="SkillName" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<label asp-for="Value" class="col-md-2 control-label"></label>
		<div class="col-md-10">
			<input asp-for="Value" class="form-control" value="0"/>
			<span asp-validation-for="Value" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<button class="btn btn-primary">Add</button>
	</div>
</form>

